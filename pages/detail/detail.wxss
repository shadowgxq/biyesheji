/* pages/detail/detail.wxss */
/* swiper */
.swiper {
  position: relative;
}
.swiper swiper{
  height: 750rpx;
}
.swiper swiper image {
  width: 100%;
  height: 100%;
}
.swiper .swiper-tips {
  position: absolute;
  bottom: 40rpx;
  right: 40rpx;
  padding: 10rpx 20rpx;
  background-color: #999;
  opacity: .6;
  border-radius: 20rpx;
}
/* infor */
.info-box {
  padding: 20rpx;
  background-color: #fff;
}
.info-box .info-price {
  font-size: 32rpx;
  padding-bottom: 5rpx;
}
.info-box .info-title {
  color: #333;
  font-size: 30rpx;
  vertical-align: middle;
  display: flex;
}
.info-box .info-title button {
  width: 50rpx;
  padding:0;
  background-color: #fff;
  font-weight: normal;
  margin-left:40rpx;
  color: #666;
}
.info-box .info-title .icon-zhuanfa {
  font-size: 36rpx;
  padding-top: 10rpx;
}
.address-box {
  padding: 40rpx 16rpx;
  display: flex;
  background-color: #f5f5f5;
}
.address-box .address {
  margin-top: -4rpx;
  padding-left: 10rpx;
}
/* pict */
.pict-box {
  padding: 16rpx 16rpx 120rpx;
}
.pict-box .pict-item {
  width: 100%;
}
.pict-box .pict-item image{
  width: 100%;
  display: block;
  /* height: auto; */
}
/* bottom-nav */
.nav-box {
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: stretch;
  font-size: 28rpx;
}
.nav-box .nav-left {
  background-color: #fff;
  padding: 10rpx 10rpx;
  flex: 0.5;
  text-align: center;
}
.nav-box .nav-left .iconfont {
  font-size: 40rpx;
}
.nav-box .nav-right {
  flex: 1;
  text-align: center;
  line-height: 110rpx;
}
.nav-box .join-shopping {
  background-color: #ffa602;
  color: #fff;
}
.nav-box .buy {
  background-color: #fe7302;
  color: #fff;
}
