page {
  height: 100vh;
  width: 100%;
  background-color: rgba(0,0,0,.1);
}
.address {
  background-color: #fff;
  padding: 5rpx 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #666;
  border-bottom: 20rpx solid rgba(0,0,0,.1);
}
.discount{
  background-color: #fff;
  padding: 5rpx 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #666;
  border-bottom: 20rpx solid rgba(0,0,0,.1);
}
.liuyan{
  background-color: #fff;
  padding: 5rpx 10rpx;
  height:120rpx;
  line-height: 60rpx;
  color: #666;
  border-bottom: 20rpx solid rgba(0,0,0,.1);
}
.zhifu{
  background-color: #fff;
  height: 100rpx;
  width: 100%;
  position: absolute;
  bottom: 0px;
  display: flex;
  color: rgba(255,0,0,.8);
}
.total{
  flex: 1;
  line-height: 100rpx;
  padding: 10rpx 20rpx;
  font-size: 30rpx;
}
.topay{
  line-height: 100rpx;
  width: 200rpx;
  background-color: rgba(255,0,0,.8);
  color: #fff;
  text-align: center;
  font-size: 30rpx;
}

.list .item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #ddd;
  background-color: #fff;
}
.list .item .item-img {
  width: 180rpx;
  height: 180rpx;
  padding:20rpx;
}
.list .item .item-img image {
  width: 100%;
  height: 100%;
}
.list .item .content {
  flex: 1;
  color: #333;
  font-size: 26rpx;
}
.list .item .content .content-name {
  margin-top: -10rpx;
}
.list .item .content .content-weight {
  padding:32rpx 0;
}
.list .item .content .content-info {
  display: flex;
  align-items: center;
}
.list .item .content .content-info .text {
  width: 70rpx;
}
.list .item .content .content-info  .price {
  flex: 1;
  font-size: 32rpx;
}
.list .item .content .content-info .btn-price {
  display: flex;
  font-size: 32rpx;
}