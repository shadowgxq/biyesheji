.address{
  width: 100vw;
  height: 100vh;
  background-color: #f5f5f5;
}
.address .address_item{
  background-color: #fff;
  padding: 10rpx 20rpx;
  border-bottom: 10rpx solid rgba(100,100,100,.1);
}
.address .address_item .top {
  display: flex;
}
.address .address_item .top .usename{
  width: 180rpx;
}
.address .address_item .bottom{
  display: flex;
}
.address .address_item .bottom .def{
  color: orange;
}
.address .address_item .bottom{
  font-size: 24rpx;
}
.add{
  color: #fff;
  height: 80rpx;
  position: absolute;
  bottom: 20rpx;
  width: 80%;
  margin-left: 75rpx;
  background-color: orange;
  text-align: center;
  line-height: 80rpx;
}
.config{
  color: #fff;
  height: 60rpx;
  margin-top: 30rpx;
  width: 80%;
  margin-left: 75rpx;
  background-color: red;
  text-align: center;
  line-height: 60rpx;
}

.add_item{
  height:80rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
}
.add_item label{
  font-size: 24rpx;
  width: 60rpx;
}
.add_item input{
  border: 1px solid #ccc;
  outline-style: none ;
  border-radius: 3px;
  padding: 0rpx 10rpx;
  font-size: 24rpx;
  width: 500rpx;
}
.add_item input:focus{
  border: 1px solid #66afe9;
  outline: 0;
  -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(102,175,233,.6);
  box-shadow: inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(102,175,233,.6)
}