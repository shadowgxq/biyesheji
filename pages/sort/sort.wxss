/* pages/sort/sort.wxss */
/* .sort-left开始 */
.sort-left {
  position: fixed;
  width: 24%;
  top: 0;
  height: 100vh;
  background-color: #f5f5f5;
  left: 0;
}
.sort-left .item {
  color: #666;
  text-align: center;
  font-size: 26rpx;
  padding:30rpx 0;
  border-bottom: 2rpx solid #eee;
  width: 100%;
}
.sort-left .item.current {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  background-color: #fff;
}
.sort-left .item.current text {
  border-left: 6rpx solid rgb(43, 198, 16);
  display: block;
  height: 60rpx;
  line-height: 60rpx;
}
/* sort-right 开始 */
.sort-right {
  position: absolute;
  left: 24%;
  top: 0;
}
/* goods的内容 */
.goods {
  padding-top: 80rpx;
}
.goods-item {
  margin-top: 10rpx;
  padding: 20rpx;
  display: flex;
  border-bottom: 2rpx solid #eee;
}
.goods .goods-pic{
  width: 220rpx;
  height: 220rpx;
}
.goods .goods-pic image{
  width: 220rpx;
  height: 220rpx;
}
.goods .goods-content {
  flex:1;
  padding-left: 16rpx;
}
.goods .goods-content .title {
  font-size: 24rpx;
  padding-top: 12rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  line-clamp: 1;
  -webkit-box-orient: vertical;
}
.goods .goods-content .brand {
  color:#999;
  font-size: 20rpx;
  padding: 40rpx 0;
}
.goods .goods-content .price {
  color: #f1c237;
  font-size: 32rpx;
}
.goods .computed {
  text-align: center;
  padding: 20rpx;
  font-size: 22rpx;
  color: #999;
}
/* search的编写 */
.search-box {
  width: 100%;
  height: 90rpx;
  position: fixed;
  background-color: #fff;
  border-bottom: 2rpx solid #eee;
}
.search {
  padding:16rpx;
  margin: 10rpx 16rpx;
  font-size: 22rpx;
  color: #ccc;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  width: 550rpx;
  box-sizing: border-box;
}
.search image {
  width: 30rpx;
  height: 30rpx;
  padding-right: 10rpx;
}
/* 返回顶部 */
.backTop {
  position: fixed;
  z-index: 99999;
  bottom: 20rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
}
.backTop image {
  width: 100%;
  height: 100%;
}
