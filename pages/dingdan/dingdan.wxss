.dingdan {
  width: 100vw;
  height: 100vh;
  background-color: #f5f5f5;
}
.dingdan .navBar {
  position: fixed;
  top: 0;
  width: 90%;
  height: 40rpx;
  display: flex;
  padding: 30rpx 30rpx;
  font-size: 24rpx;
  color: #000;
  background-color: #fff;
  justify-content: space-between;
  border-radius: 10rpx;
  margin-left: 10rpx ;
}
.dingdan .navBar .navBar_item.active {
  color: orange;
}
.dingdan .content{
  padding-top: 100rpx;
}
.dingdan .content .content_item {
  padding: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  border-bottom: 4rpx solid rgba(0,0,0,.1);
  position: relative;
}
.dingdan .content .content_item .item_title {
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
  padding: 20rpx ;
}
.dingdan .content .content_item .item_content {
  display: flex;
}
.dingdan .content .content_item .item_content .item_img {
  padding: 20rpx ;
  width: 160rpx;
}
.dingdan .content .content_item .item_content .item_img image {
  width: 100%;
  height: 160rpx;
}
.dingdan .content .content_item .item_content .item_text {
  padding: 20rpx ;
  flex: 1;
}
.dingdan .content .content_item .item_content .item_text view:nth-child(1) {
  font-size: 30rpx;
}
.dingdan .content .content_item .item_content .item_text view:nth-child(2) {
  margin-top: 10rpx;
  color: orange;
  font-size: 20rpx;
}
.dingdan .content .content_item .item_content .item_text view:nth-child(3) {
  margin-top: 40rpx;
  font-size: 28rpx;
}
.dingdan .content .content_item .item_bottom {
  margin-left: 160rpx;
}
.dingdan .content .content_item .item_bottom .daishouhuo {
  display: flex;
}
.dingdan .content .content_item .item_bottom .daishouhuo view {
  width: 80rpx;
  padding: 6rpx 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 20rpx;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
  text-align: center;
}
.dingdan .content .content_item .item_bottom .daishouhuo view:last-child {
  color: orange;
  border: 1px solid orange;
}
.status_data{
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  font-size: 24rpx;
}