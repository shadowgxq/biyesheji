@import '../../public/iconfont-weapp/iconfont-weapp-icon.wxss';
/* pages/home/home.wxss */
/* swiper */
.home {
  background-color: #f5f5f5;
}
/* search 开始 */
.search {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  background-color: rgba(185, 61, 61, 0.8);
  z-index: 9999;
  padding: 16rpx;
  box-sizing:border-box;
  display: flex;
  font-size: 26rpx;
  color: #ccc;
}
.search .tubiao {
  border: 2rpx solid #f5f5f5;
  border-radius: 80rpx;
  background-color: #fff;
  width: 100%;
  padding: 16rpx;
  box-sizing: border-box;
}
.swiper-box {
  padding: 100rpx 20rpx 20rpx;
}
.swiper-box swiper {
  height: 400rpx;
  overflow: hidden;
}
.swiper-box swiper image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}
/* nav开始 */
.nav {
  padding-top: 40rpx;
}
.nav-list{
  display: flex;
  flex-wrap: wrap;
  margin-left: 60rpx;
}
.nav .active .item_name{
  color: red;
  font-weight: 700;
}
.nav .item{
  flex: 25%;
  padding: 10rpx 0rpx;
  opacity: 0.7;
}
.nav .active.item{
  opacity: 1;
}
.nav .t-icon {
  width: 80rpx;
  height: 80rpx;
}
.nav .item_name{
  color: #333;
  font-size: 20rpx;
  margin-left: 20rpx;
}

/* goods的内容 */
.goods{
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.goods .goods-item{
  background-color: #fff;
  width: 45%;
  overflow: hidden;
  margin: 10rpx 19rpx;
  border-radius: 10rpx;
}
.goods .goods-item .goods-pic .img{
  width: 300rpx;
  height: 350rpx;
}
.goods .goods-item .goods-content{
  padding: 10rpx 10rpx;
  font-size: 25rpx;
  color: #333;
}
.goods .goods-item .goods-content .title{
  
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  text-align: center;

}
.goods .goods-item .goods-content .price_b{
  display: flex;
  justify-content: space-between;
}
.goods .goods-item .goods-content .price_b .price{
  color: red;
  font-size: 35rpx;
}
.goods .goods-item .goods-content .price_b .sell{
  margin-top: 10rpx;
  font-size: 20rpx;
  color: #aaa;
}
/* 会员 */
.huiyuan {
  margin-top: 20rpx;
  width: 94%;
  background-color: #3bba63;
  padding: 10rpx;
  color: white;
  margin: 0 auto;
  border-radius: 10rpx;
  display: flex;
  margin-bottom: 20rpx;
  font-size: 20rpx;
  font-weight: 500;
  justify-content: space-between;
  align-items: center;
  opacity: .8;
}
.huiyuan .left image {
  width: 24rpx;
  height: 24rpx;
  padding-right: 20rpx;
}
/* xianshi start */
.xianshi-top {
  padding:40rpx 20rpx 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.xianshi-top .xianshi-top-left {
  font-size: 38rpx;
}
.xianshi-bottom {
  padding:0rpx 0 20rpx 16rpx;
}
.xianshi-bottom .goods-item {
  margin-top: 10rpx;
  margin-right: 25rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 2rpx solid #eee;
  width: 240rpx;
  background-color: #fff;
  border-radius: 20rpx;
  display: inline-block;
}
.xianshi-bottom .goods .goods-pic{
  width: 200rpx;
  height: 200rpx;
  margin: auto;
}
.xianshi-bottom .goods .goods-pic image{
  width: 200rpx;
  height: 200rpx;
}
.xianshi-bottom .goods .goods-content {
  flex:1;
  padding-left: 0rpx;
}
.xianshi-bottom .goods .goods-content .title {
  font-size: 32rpx;
  padding-top: 0rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  line-clamp: 1;
  -webkit-box-orient: vertical;
}
.xianshi-bottom .goods .goods-content .brand {
  color:#999;
  font-size: 24rpx;
  text-align: center;
  padding-bottom: 0rpx;
  padding-top: 20rpx;
}
.xianshi-bottom .goods .goods-content .price {
  color: #f1c237;
  font-size: 40rpx;
  text-align: center;
}
/* 返回顶部 */
.backTop {
  position: fixed;
  z-index: 99999;
  bottom: 20rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
}
.backTop image {
  width: 100%;
  height: 100%;
}


