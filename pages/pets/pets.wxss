/* pages/pets/pets.wxss */
/* list */
page {
  height: 100%;
}
.pets {
  height: 100%;
  background-color: #f5f5f5;
  
}
.pets .list {
  padding: 20rpx;
}
.pets .list .item {
  margin-top: 30rpx;
  background-color: rgba(251, 211, 117, 0.135);
  padding: 20rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #333;
}
.list .item .goods-top {
  display: flex;
  justify-content: space-between;
  padding-bottom: 20rpx;
  
}
.list .item .content {
  display: flex;
}
.list .item .content .content-img {
  width: 200rpx;
  height: 200rpx;
}
.list .item .content .content-img image {
  width: 100%;
  height: 100%;
}
.list .item .content .content-right {
  flex: 1;
  padding-left: 20rpx;
  font-size: 26rpx;
}
.content-right .content-price {
  padding:4rpx 0 60rpx;
}
.content-right .content-time,.bianhao {
  font-size: 24rpx;
  color: #666;
}