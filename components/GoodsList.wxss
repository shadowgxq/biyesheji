/* components/GoodsList.wxss */

/* goods的内容 */
.goods{
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
  background-color: #ddd;
}
.goods .goods-item{
  background-color: #fff;
  width: 45%;
  overflow: hidden;
  margin: 10rpx 19rpx;
  border-radius: 10rpx;
}
.goods .goods-item .goods-pic .img{
  width: 300rpx;
  height: 350rpx;
}
.goods .goods-item .goods-content{
  padding: 10rpx 10rpx;
  font-size: 25rpx;
  color: #333;
}
.goods .goods-item .goods-content .title{
  
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  text-align: center;

}
.goods .goods-item .goods-content .price_b{
  display: flex;
  justify-content: space-between;
}
.goods .goods-item .goods-content .price_b .price{
  color: red;
  font-size: 35rpx;
}
.goods .goods-item .goods-content .price_b .sell{
  margin-top: 10rpx;
  font-size: 20rpx;
  color: #aaa;
}